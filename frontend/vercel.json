{
    "version": 2,
    "buildCommand": "cd frontend && npm install && npm run build",
    "outputDirectory": "frontend/build",
    "builds": [
        {
            "src": "backend/api/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/build/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/api/index.js"
        },
        {
            "src": "/uploads/(.*)",
            "dest": "backend/api/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/build/index.html"
        }
    ]
}